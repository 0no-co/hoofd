{
  "name": "hooked-head",
  "version": "0.1.0",
  "description": "Hooks to populate the html head.",
  "scripts": {
    "build": "rimraf dist && yarn build:preact && yarn build:react && yarn build:minified",
    "build:react": "microbundle --external react --name hookedHead --no-compress --output dist/",
    "build:preact": "microbundle --external preact --name hookedHead --no-compress --output preact/dist --alias react=preact/hooks",
    "build:minified": "microbundle --external react --name hookedHead --output prod/",
    "test": "jest",
    "test:watch": "yarn test -- --watch",
    "prepublishOnly": "yarn test && yarn lint && yarn build",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoviDeCroock/hooked-head.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JoviDeCroock/hooked-head/issues"
  },
  "homepage": "https://github.com/JoviDeCroock/hooked-head#readme",
  "main": "./dist/hooked-head.js",
  "browser": "./dist/hooked-head.umd.js",
  "umd:main": "./dist/hooked-head.umd.js",
  "jsnext:main": "./dist/hooked-head.modern.js",
  "module": "./dist/hooked-head.module.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/hooked-head.module.js",
      "umd": "./dist/hooked-head.umd.js",
      "import": "./dist/hooked-head.module.js",
      "require": "./dist/hooked-head.js"
    },
    "./preact": {
      "browser": "./preact/dist/hooked-head.module.js",
      "umd": "./preact/dist/hooked-head.umd.js",
      "import": "./preact/dist/hooked-head.module.js",
      "require": "./preact/dist/hooked-head.js"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/react": "^10.0.2",
    "@types/jest": "24.0.23",
    "@types/react": "16.9.16",
    "@types/react-dom": "16.9.4",
    "@typescript-eslint/eslint-plugin": "2.11.0",
    "@typescript-eslint/parser": "2.11.0",
    "codecov": "3.6.5",
    "eslint": "6.7.2",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-react": "7.17.0",
    "husky": "3.1.0",
    "jest": "^25.2.6",
    "jest-cli": "^25.2.6",
    "lint-staged": "9.5.0",
    "microbundle": "0.12.0-next.8",
    "preact": "^10.3.4",
    "prettier": "^2.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.3.0",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "mangle": {
    "regex": "^_"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testMatch": [
      "<rootDir>/__tests__/**/*.(test|spec).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
